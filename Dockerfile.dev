FROM node:20-alpine

WORKDIR /opt/app

# System-Dependencies
RUN apk update && apk add --no-cache \
    build-base \
    gcc \
    autoconf \
    automake \
    zlib-dev \
    libpng-dev \
    vips-dev \
    git \
    python3

# Package files kopieren
COPY package*.json ./

# Dependencies installieren (inkl. devDependencies)
RUN npm ci

# App-Code kopieren
COPY . .

# Port freigeben
EXPOSE 1337

# Development Mode mit auto-reload
CMD ["npm", "run", "develop"]